{
    "name": "python2-pip",
    "buildsystem": "simple",
    "build-commands": [
        "pip2 install --upgrade --no-index --find-links=\"file://${PWD/sources}\" --prefix=${FLATPAK_DEST} pip --no-build-isolation"
    ],
    "sources": [
        {
            "type": "dir",
            "path": "sources"
        }
    ]
}
